@model AccountUserModel

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true">
    <div class="container-xxl content-wrapper py-4">

        <div class="row mx-4">

            <div class="col-2"></div>

            <div class="col-8 p-0">

                <div class="outter-wrapper p-4">

                    <div class="inner-wrapper">

                        <h1 class="mt-2">Редактирование профиля</h1>

                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="Name">Имя*</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <input type="text" asp-for="Name" />
                            </div>
                            <div class="col-2"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <span asp-validation-for="Name" />
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="Surname">Фамилия*</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <input type="text" asp-for="Surname" />
                            </div>
                            <div class="col-2"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <span asp-validation-for="Surname" />
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="Birthday">Дата рождения</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <input type="date" asp-for="Birthday" />
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="RegionId">Регион*</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <select asp-for="RegionId" asp-items="ViewBag.Regions"><option value=""></option></select>
                            </div>
                            <div class="col-2"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <span asp-validation-for="RegionId" />
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="ClubId">Клуб</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <select asp-for="ClubId" asp-items="ViewBag.Clubs"><option value=""></option></select>
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2 p-0"><label asp-for="Login">Логин*</label></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <input type="text" asp-for="Login" />
                            </div>
                            <div class="col-2"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <span asp-validation-for="Login" />
                            </div>
                            <div class="col-2"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2 pb-2">
                            <div class="col-2"></div>
                            <div class="col-4 p-0">
                                <div class="edit-back-button p-0">
                                    <a class="p-0 " asp-action="Profile" asp-route-login="@User.Identity.Name">Назад</a>
                                </div>
                            </div>
                            <div class="col-4 p-0 ">
                                <div class="button-class p-0">
                                    <input class="submit-button btn btn-outline-dark p-0" type="submit" value="Подтвердить" />
                                </div>
                            </div>
                            <div class="col-2"></div>
                        </div>

                    </div>

                </div>

            </div>
            <div class="col-2"></div>
        </div>
    </div>
</form>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
@section styles{
    <link rel="stylesheet" type="text/css" href="~/css/account_edit_styles.css">
}
