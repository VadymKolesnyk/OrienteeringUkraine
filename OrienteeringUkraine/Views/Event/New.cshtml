                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <select asp-for="RegionId" asp-items="ViewBag.Regions"><option value=""></option></select>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3"></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <span asp-validation-for="RegionId" />
                            </div>
                            <div class="col-1"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3 p-0"> <label asp-for="Location">Место проведения</label></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <input type="text" asp-for="Location" />
                            </div>
                            <div class="col-1"></div>
                        </div>

                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3 p-0"><label asp-for="Groups">Группы*</label></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <textarea class="input-note" rows="3" cols="100" asp-for="Groups"> Формат ввода : "[группа];[группа];" (пример: Ж12;Ж14;М12;М14;)</textarea>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3"></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <span asp-validation-for="Groups" />
                            </div>
                            <div class="col-1"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3 p-0"><label asp-for="InfoLink">Ссылка на информацию</label></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <input type="url" asp-for="InfoLink" />
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3"></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <span asp-validation-for="InfoLink" />
                            </div>
                            <div class="col-1"></div>
                        </div>
                        @**************************************@
                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3 p-0"><label asp-for="ResultsLink">Ссылка на результаты</label></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <input type="url" asp-for="ResultsLink" />
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <div class="form-group row my-2">
                            <div class="col-1"></div>
                            <div class="col-3"></div>
                            <div class="col-2"></div>
                            <div class="col-5 p-0">
                                <span asp-validation-for="ResultsLink" />
                            </div>
                            <div class="col-1"></div>
                        </div>
                        @**************************************@
                    <div class="form-group row my-2">
                        <div class="col-1"></div>
                        <div class="col-3"></div>
                        <div class="col-2"></div>
                        <div class="col-5 p-0 ">
                            <div class="button-class p-0">
                                <input class="submit-button btn btn-outline-dark mb-1 p-0" type="submit" value="Создать" />
                            </div>
                        </div>
                        <div class="col-1"></div>
                    </div>
                    </div>

                </div>

            </div>
            <div class="col-1"></div>
        </div>
    </div>
